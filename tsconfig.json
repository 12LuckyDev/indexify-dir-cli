{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "module": "Node16",
    "target": "ES2020",
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": ["src"]
}
